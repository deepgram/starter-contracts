{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryParameters",
  "description": "Minimal query parameters for Flux conversational transcription scaffolding",
  "type": "object",
  "required": [
    "stream_url",
    "model"
  ],
  "additionalProperties": false,
  "properties": {
    "stream_url": {
      "type": "string",
      "format": "uri",
      "description": "URL of live audio stream to transcribe"
    },
    "model": {
      "type": "string",
      "description": "Flux model for conversational transcription",
      "default": "flux-general-en"
    }
  }
}