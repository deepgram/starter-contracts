{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TurnInfoEvent",
  "description": "Flux turn-based transcription result for starter applications",
  "type": "object",
  "required": [
    "type",
    "request_id",
    "sequence_id",
    "event",
    "turn_index",
    "audio_window_start",
    "audio_window_end",
    "transcript",
    "words",
    "end_of_turn_confidence"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "TurnInfo"
      ],
      "description": "Message type identifier"
    },
    "request_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique request identifier"
    },
    "sequence_id": {
      "type": "number",
      "description": "Sequence number incremented for each message"
    },
    "event": {
      "type": "string",
      "enum": [
        "StartOfTurn",
        "EndOfTurn"
      ],
      "description": "Type of turn event (StartOfTurn, EndOfTurn)"
    },
    "turn_index": {
      "type": "number",
      "description": "Index of the current turn"
    },
    "audio_window_start": {
      "type": "number",
      "description": "Start time in seconds"
    },
    "audio_window_end": {
      "type": "number",
      "description": "End time in seconds"
    },
    "transcript": {
      "type": "string",
      "description": "Transcribed text for the current turn"
    },
    "words": {
      "type": "array",
      "description": "Word-level information with confidence scores",
      "items": {
        "type": "object",
        "required": [
          "word",
          "confidence"
        ],
        "additionalProperties": false,
        "properties": {
          "word": {
            "type": "string",
            "description": "Individual word from transcript"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score (0-1)"
          }
        }
      }
    },
    "end_of_turn_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence that no more speech is coming in this turn (0-1)"
    }
  }
}