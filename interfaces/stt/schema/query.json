{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryParameters",
  "description": "Minimal query parameters for STT transcription - focused on essential starter app functionality",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "language": {
      "type": "string",
      "description": "BCP-47 language tag (e.g., 'en-US', 'es-ES')"
    },
    "model": {
      "type": "string",
      "description": "STT model to use for transcription (e.g., 'nova-2', 'enhanced')"
    },
    "paragraphs": {
      "type": "boolean",
      "description": "Enable paragraph segmentation in transcript"
    },
    "smart_format": {
      "type": "boolean",
      "description": "Enable intelligent formatting of transcript"
    },
    "tag": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Tag for categorizing requests"
    }
  }
}