{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Text Intelligence Request",
  "description": "Schema for Text Intelligence API request body. Must contain either 'url' or 'text', but not both.",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "A URL pointing to the text source"
        }
      },
      "required": [
        "url"
      ],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "minLength": 1,
          "description": "The plain text to analyze"
        }
      },
      "required": [
        "text"
      ],
      "additionalProperties": false
    }
  ]
}